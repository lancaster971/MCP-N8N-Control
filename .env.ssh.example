# SSH Server Configuration Example
# Copia questo file in .env e configura le tue impostazioni SSH

# ================================
# SSH SERVER SETTINGS
# ================================

# Abilita/disabilita server SSH
SSH_ENABLED=true

# Configurazione di rete SSH
SSH_HOST=0.0.0.0
SSH_PORT=2222

# Credenziali SSH
SSH_USERNAME=pilotpro
SSH_PASSWORD=ssh_secure_password_2025

# Limiti connessioni
SSH_MAX_CONNECTIONS=5
SSH_IDLE_TIMEOUT=300000

# Rate limiting SSH
SSH_RATE_LIMIT_ENABLED=true
SSH_MAX_CONNECTIONS_PER_IP=2

# Tunnel database
SSH_DATABASE_HOST=localhost
SSH_DATABASE_PORT=5432

# ================================
# ESEMPI UTILIZZO
# ================================

